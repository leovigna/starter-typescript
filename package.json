{
    "name": "@leovigna/typescript-starter",
    "version": "0.1.2",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/leovigna/typescript-starter.git"
    },
    "homepage": "https://leovigna.github.io/typescript-starter",
    "copyright": "Copyright 2021 Leo Vigna",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf lib",
        "test": "cross-env NODE_ENV=test mocha 'lib/**/*.test.js'",
        "start": "node lib/index.js",
        "build": "npm-run-all tsc copy",
        "tsc": "tsc",
        "tsc:watch": "tsc -w",
        "copy": "npm-run-all copy:prepublish",
        "copy:prepublish": "mkdir -p lib && cp package.json lib/ && cp README.md lib/ && cp LICENSE lib/",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "lint:staged": "lint-staged",
        "docs": "typedoc",
        "prepare": "husky install && npm run build",
        "prepublishOnly": "npm run test",
        "heroku:web": "heroku container:push web && heroku container:release web"
    },
    "dependencies": {
        "dotenv": "^10.0.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.21",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.4.13",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "chai": "^4.3.4",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "mocha": "^9.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "typedoc": "^0.21.5",
        "typedoc-neo-theme": "^1.1.0",
        "typescript": "^4.3.5"
    },
    "files": [
        "*",
        "!test",
        "!./**/*.test.*"
    ],
    "main": "index.js",
    "types": "index.d.ts",
    "publishConfig": {
        "directory": "lib"
    }
}
